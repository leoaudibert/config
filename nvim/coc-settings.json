{
  // https://github.com/fannheyward/coc-pyright
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": ["lua", "python", "json"],

  "python.formatting.provider": "black",
  "python.formatting.blackArgs": [],
  //"python.linting.flake8Enabled": true,
  "python.linting.ruffEnabled": true,
  "python.linting.pylamaEnabled": true,
  "python.sortImports.path": "/Library/Frameworks/Python.framework/Versions/3.9/bin/isort",

  "pyright.organizeimports.provider": "isort",

  "diagnostic.checkCurrentLine": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "pydocstring.formatter": "google",
  "languageserver": {
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      // customize filetypes to your needs
      "filetypes": ["typescript", "typescriptreact", "graphql"]
    }
  },
  "git.enableGutters": true
}
